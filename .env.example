# Gemini API key for image generation access (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Authentication token for MCP server
MCP_AUTH_TOKEN=your_auth_token_here

# Optional: API token for web server endpoints
# If set, all generation endpoints require authentication via:
# - Authorization: Bearer <token> header, OR
# - ?token=<token> query parameter
# If not set, endpoints are publicly accessible (protected only by rate limiting)
# API_AUTH_TOKEN=your_secure_api_token_here

# Web server port (default: 3070)
PORT=3070

# Output directory for saved images (default: ./generated-images)
# OUTPUT_DIR=./your-custom-output-path

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# CORS allowed origins (comma-separated, default: * allows all)
# Example: CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_ORIGINS=*

# Rate limiting - maximum requests per 15 minutes per IP (default: 100)
RATE_LIMIT_MAX=100

# Rate limiting for generation endpoints per 15 minutes (default: 20)
GENERATION_RATE_LIMIT=20

# Enable response caching for repeated prompts (default: true)
# Set to 'false' to disable caching
# ENABLE_CACHE=true